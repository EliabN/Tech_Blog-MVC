<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
  </div>
  <div class="col-md-7">
    <h3>
      {{post.content}}
    </h3>
    <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
    <div class="col-md-7">
    <!-- Loop over each comment in the comments array for this post -->
    {{#each post.comments as |comment| }}
        <div class="comment col-md-7">
          <p>{{comment.comment}}</p>
          <p>Comment by {{comment.user.name}} on {{format_date comment.date_created}}</p>
        </div>
      {{/each}}
  </div>
</div>
{{/each}}