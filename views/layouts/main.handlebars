<!--
// WHEN I click on the homepage option
// THEN I am taken to the homepage (check main handles)

// WHEN I am signed in to the site
// THEN I see navigation links for the homepage, the dashboard, and the option to log out (check main handles) 
-->

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tech Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <header class="container-fluid bg-dark text-light p-2">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <h1>
          <a href="/">Mobile Tech Blog</a>
        </h1>
        <nav>
          <a class="btn btn-primary" href="/">Home</a> |
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
          <a class="btn btn-secondary" href="/dashboard">Dashboard</a>
          <button class="btn btn-secondary" id="logout">Logout</button>
          {{else}}
          <a class="btn btn-secondary" href="/login">Login</a>
          <a class="btn btn-secondary" href="/login">Dashboard</a>
          {{/if}}
        </nav>
      </div>
    </div>
  </header>
  <main class="row justify-content-center p-4">
    <!-- Render the sub layout -->
    {{{ body }}}
  </main>
  <footer>

  </footer>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
  <!--<script> 
  // Access the user ID in JavaScript
    var userId = {{session.user_id}};
</script>-->

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>