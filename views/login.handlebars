<div class="row card p-3 pt-1 pb-0 d-flex justify-content-center" style="width: 80%;">
  <h2>Login</h2>
  <form class="form login-form">
    <section class="card bg-dark p-3 text-light">
      <div class="form-group">
        <label for="name-login">User:</label>
        <input class="form-control" type="text" id="name-login" />
      </div>
      <div class="form-group" style="width: 100%;">
        <label for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
    </section>
    <br>
    <section class="form-group">
      <button class="btn btn-primary" type="submit">Login</button>
      <button class="btn btn-secondary" id="signup-button">Sign Up</button>
    </section>
  </form>
</div>

<script src="./js/login.js"></script>