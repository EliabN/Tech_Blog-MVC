<div class="col container container-fluid mt-4 the-post" data-id="{{id}}">
  <div class="col mb-4 lg-9 post">
    <div class="card p-3 pt-1 pb-0 d-flex row-md-7">
      <h2 class="d-flex align-items-center">
        <p class="mb-0 me-2">Topic: {{title}}</p>
      </h2>
    </div>
    <div class="row-md-7 card bg-dark p-3">
      <div class="card p-3 pt-1 pb-0 mb-3 bg-primary text-light">
        <h3 class="pt-0">
          {{content}}
        </h3>
        <p>Posted by: {{user.name}} on {{format_date date_created}}</p>
      </div>
      <!-- Loop over each comment in the comments array for this post -->
      <div class="row-md-7 p-3 pt-1 pb-0">
        {{#each comments as |comment| }}
        <div class="card bg-dark p-3 pt-1 pb-0 mb-2 comments-section row-md-7 text-light">
          <h4>{{comment.comment}}</h4>
          <p>Comment by: {{comment.user.name}} on {{format_date comment.date_created}}</p>
        </div>
        {{/each}}
      </div>
      <form class="form new-comment-form justify-content-center text-light">
        <div class="form-group">
          <label for="comment">
            <h4 style="color: aquamarine;">
              Leave a Comment:
            </h4>
          </label>
        </div>
        <div class="form-group d-flex justify-content-center">
          <input class="form-input me-4" type="text" id="comment-content" content="comment-content" row="3"
                 style="width: 80%;"></input>
          {{#if logged_in}}
          <button type="submit" class="btn btn-primary add-comment" style="width: 20%;">Add Comment</button>
          {{else}}
          <a href="/login" class="btn btn-primary login-comment" style="width: 20%;">Login</a>
          {{/if}}
        </div>
      </form>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
    <script src="/js/comment.js"></script>
    {{/if}}