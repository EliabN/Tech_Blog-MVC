<div class="col-md-7 card p-3 pt-1 pb-0 justify-content-center" style="width: 60%;">
  <h2>Signup</h2>
  <form class="form signup-form">
    <p>Create an account!</p>
    <section class="card bg-dark p-3" style="color: aquamarine;">
      <div class="form-group d-flex align-items-center">
        <label for="name-signup" class="me-5">Name:</label>
        <input class="form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group d-flex align-items-center">
        <label for="password-signup" class="me-4">Password:</label>
        <input class="form-control" type="password" id="password-signup" />
      </div>
    </section>
    <br>
    <section class="form-group">
      <button class="btn btn-primary" type="submit">Sign Up</button>
      <button class="btn btn-secondary" id="back-button">Back</button>
    </section>
  </form>
</div>

<script src="./js/signUp.js"></script>